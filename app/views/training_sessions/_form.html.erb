
<%= form_for [@training_session] do |f| %>

    <%= f.label :date %>
    <%= f.date_field :date %>

    <%= f.label :condition %>
    <%= f.text_field :condition %>

    <br></br>

    <%= f.label :competition_id %>
    <%= f.collection_select :competition_id, current_user.competitions, :id, :title%>
    <br></br>

    <% if @training_session.workout_id.nil? %>

        <%= f.select :workout_id, options_from_collection_for_select(Workout.all, :id, :name) %><br>
    
    <% else %>  

        <%= f.hidden_field :workout_id %> 

    <% end %>

    <%= f.submit%>   

<% end %>

